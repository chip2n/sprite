<SpriteWidget>:
    FloatLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: root.size
                pos: root.pos
        CanvasWidget:
            id: canvas
        SpriteSplitter:
            id: splitter1
            orientation: 'horizontal'
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
            sizable_from: 'right'
            size: 200, root.height
            min_size: 0
            max_size: 200
            BoxLayout:
                canvas:
                    Color:
                        rgb: 1, 1, 0
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Button:
                size: 20, root.height
                size_hint: (None, None)

<CanvasWidget>:
    on_size: self.resize()
    size: (512, 512)
    pos: (0, 0)
    scale: 1
    canvas:
        Color:
            rgb: 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    GridWidget:
        id: grid
        size: root.size
        pos: root.pos
        lines: (512, 512)
        scale: root.scale
        visible: True
        visibility_density: 10
